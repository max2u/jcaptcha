<?xml version="1.0" encoding="iso-8859-1"?>

<project>
    <extend>${basedir}/../base_project.xml</extend>
    <artifactId>jcaptcha-module-base</artifactId>
    <name>jcaptcha-module-base</name>
    <package>com.octo.captcha.module</package>

    <description><![CDATA[<b>JCAPTCHA</b>, for <b>J</b>ava <b>C</b>ompletely <b>A</b>utomated <b>P</b>ublic <b>T</b>est to tell <b>C</b>omputers and <b>H</b>umans <b>A</b>part
<br/>The open source java framework for captcha definition and integration
<br/>
 <br/>
 A captcha module contains common utilities for captcha-modules which aims to your integrate a captcha service in your application<BR/>
 jcaptcha base module aims to provide base components to build a specialized module.<br/>
 It uses the jcaptcha-sevice for the captchas life cycle and generation.]]></description>

    <shortDescription>JCAPTCHA module base : base for integrating a captcha service in applications.</shortDescription>

    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/jcaptcha:jcaptcha/module-base</connection>
        <url>http://cvs.sourceforge.net/viewcvs.py/jcaptcha/</url>

    </repository>

    <dependencies>
        <dependency>
            <id>xml-apis</id>
            <version>1.0.b2</version>
            <url>http://xml.apache.org/xerces2-j/</url>
        </dependency>

        <dependency>
            <id>xerces</id>
            <version>2.2.1</version>
            <url>http://xml.apache.org/xerces2-j/</url>
        </dependency>

        <dependency>
            <id>commons-logging</id>
            <version>1.0.4</version>
        </dependency>

        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>jcaptcha-service</artifactId>
            <version>${project.version}</version>
            <url>http://jcaptcha.sourceforge.net</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>servletapi</groupId>
            <artifactId>servletapi</artifactId>
            <version>2.3</version>
            <url>http://java.sun.com</url>
        </dependency>

        <dependency>
            <groupId>jmx</groupId>
            <artifactId>jmxri</artifactId>
            <version>1.2.1</version>
            <url>http://www.bluesunrise.com/maven/jmx</url>
        </dependency>

    </dependencies>

</project>